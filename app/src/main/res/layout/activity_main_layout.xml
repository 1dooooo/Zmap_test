<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frame_layout"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.amap.api.maps.MapView
            android:id="@+id/MainActivity_map"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.amap.api.maps.MapView>

        <LinearLayout
            android:id="@+id/MainActivity_top_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--个人信息按钮，搜索框!-->
            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:background="@drawable/round_rectangle_not_selectable"
                android:padding="5dp"
                android:elevation="@dimen/elevation"
                android:layout_margin="@dimen/common_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/MainActivity_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/button_size"
                    android:minHeight="@dimen/button_size"
                    android:background="@drawable/oval_white_pressed_gray"
                    android:src="@drawable/headicon"
                    android:contentDescription="@string/app_name"/>
                <TextView
                    android:id="@+id/MainActivity_search_box"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorDarkGray"
                    android:text="查找地点、公交、地铁"
                    android:layout_gravity="center"/>
                <ImageButton
                    android:id="@+id/MainActivity_voice_search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/oval_white_pressed_gray"
                    android:src="@drawable/microphone"
                    android:minHeight="@dimen/button_size"
                    android:minWidth="@dimen/button_size"
                    android:layout_gravity="end|center"
                    />
            </LinearLayout>
            <!--横排圆形和圆角矩形按钮!-->
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/MainActivity_msg_center_button"
                    style="@style/MainActivityTopTwoButtonStyle"
                    android:src="@drawable/message"
                    android:background="@drawable/oval_white_pressed_gray"/>

                <ImageButton
                    android:id="@+id/MainActivity_map_mode_button"
                    style="@style/MainActivityTopTwoButtonStyle"
                    android:background="@drawable/round_rectangle_white_pressed_gray"
                    android:src="@drawable/map"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <!--竖排五个按钮!-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rectangle_white_pressed_gray"
                android:elevation="3dp"
                android:padding="0dp"
                android:layout_margin="@dimen/common_margin"
                android:layout_gravity="end">
                <ImageButton
                    android:id="@+id/MainActivity_instant_route_status_button"
                    style="@style/MainActivityRightFiveButtonStyle"
                    android:src="@drawable/route_status_off_route_plan"
                    android:background="@drawable/rectangle_top"
                    />
                <View
                    style="@style/MainActivityRightFiveButtonDiverStyle"/>
                <ImageButton
                    android:id="@+id/MainActivity_take_taxi_button"
                    style="@style/MainActivityRightFiveButtonStyle"
                    android:src="@drawable/car"
                    android:background="@drawable/rectangle"
                    />
                <View
                    style="@style/MainActivityRightFiveButtonDiverStyle"/>
                <ImageButton
                    android:id="@+id/MainActivity_shared_bike_button"
                    style="@style/MainActivityRightFiveButtonStyle"
                    android:src="@drawable/bike"
                    android:background="@drawable/rectangle"
                    />
                <View
                    style="@style/MainActivityRightFiveButtonDiverStyle"/>
                <ImageButton
                    android:id="@+id/MainActivity_team_button"
                    style="@style/MainActivityRightFiveButtonStyle"
                    android:src="@drawable/walk_together"
                    android:background="@drawable/rectangle"
                    />
                <View
                    style="@style/MainActivityRightFiveButtonDiverStyle"/>
                <ImageButton
                    android:id="@+id/MainActivity_report_button"
                    style="@style/MainActivityRightFiveButtonStyle"
                    android:src="@drawable/report"
                    android:background="@drawable/rectangle_bottom"
                    />
            </LinearLayout>
            <!--+，-缩放按钮!-->
            <LinearLayout
                android:id="@+id/MainActivity_zoom_holder"
                android:orientation="vertical"
                android:layout_width="@dimen/button_size"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rectangle_white_pressed_gray"
                android:padding="0dp"
                android:elevation="3dp"
                android:layout_gravity="end"
                android:layout_marginTop="41dp"
                android:layout_marginBottom="41dp"
                android:layout_marginEnd="@dimen/common_margin">
                <ImageButton
                    android:id="@+id/MainActivity_zoom_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/button_size"
                    android:minWidth="@dimen/button_size"
                    android:src="@drawable/plus"
                    android:background="@drawable/rectangle_top"
                    android:layout_gravity="end"
                    />
                <View
                    android:layout_width="@dimen/button_size"
                    android:layout_height="0.5dp"
                    android:layout_gravity="end"
                    android:background="@drawable/div38">
                </View>
                <ImageButton
                    android:id="@+id/MainActivity_zoom_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/button_size"
                    android:minWidth="@dimen/button_size"
                    android:src="@drawable/sub"
                    android:background="@drawable/rectangle_bottom"
                    android:layout_gravity="end"
                    />
            </LinearLayout>
            <!--路线，定位，家 按钮!-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true">
                <ImageButton
                    android:id="@+id/MainActivity_location"
                    style="@style/CommonButtonStyleSmall"
                    android:src="@drawable/whereme"
                    android:layout_margin="@dimen/common_margin"
                    android:background="@drawable/oval_white_pressed_gray"/>
                <ImageButton
                    android:id="@+id/MainActivity_route_plan_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:minWidth="@dimen/button_size"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/half_round_rectangle"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:elevation="@dimen/elevation"
                    android:layout_marginBottom="@dimen/common_margin"
                    android:src="@drawable/route"/>
                <ImageButton
                    android:id="@+id/MainActivity_home_company_set_button"
                    style="@style/CommonButtonStyleSmall"
                    android:layout_margin="@dimen/common_margin"
                    android:src="@drawable/target"
                    android:background="@drawable/oval_white_pressed_gray"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <!--搜索附近框!-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="@dimen/elevation"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginBottom="@dimen/common_margin"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginEnd="@dimen/common_margin"
                android:background="@drawable/round_rectangle_not_selectable">
                <ImageView
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/button_size"
                    android:minWidth="@dimen/button_size"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/common_margin"
                    android:paddingBottom="@dimen/common_margin"
                    android:paddingTop="12dp"
                    android:paddingEnd="0dp"
                    android:src="@drawable/logo"/>
                <TextView
                    android:id="@+id/MainActivity_near_search_box"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:text=" 消息中心"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MainActivity_poi_detail_holder"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="gone">
            <ImageButton
                android:id="@+id/MainActivity_poi_detail_location"
                style="@style/CommonButtonStyleSmall"
                android:src="@drawable/whereme"
                android:layout_margin="@dimen/common_margin"
                android:background="@drawable/oval_white_pressed_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/colorWhite"
                android:elevation="10dp"
                android:layout_gravity="bottom">
                <TextView
                    android:id="@+id/MainActivity_poi_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="@dimen/common_margin"
                    android:layout_marginTop="@dimen/common_margin_middle"
                    android:layout_marginBottom="@dimen/common_margin"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:text="郑州大学"/>
                <TextView
                    android:id="@+id/MainActivity_poi_detail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="@dimen/common_margin"
                    android:layout_marginBottom="@dimen/common_margin_middle"
                    android:layout_below="@id/MainActivity_poi_detail_title"
                    android:textSize="16sp"
                    android:text=""/>
                <Button
                    android:id="@+id/MainActivity_poi_detail_go_there"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_light_gray"
                    android:layout_below="@id/MainActivity_poi_detail_description"
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="16sp"
                    android:text="去这里"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_above="@id/MainActivity_poi_detail_go_there"
                    android:background="@color/colorLightGray"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
    <include layout="@layout/sliding_menu_layout"/>
</android.support.v4.widget.DrawerLayout>