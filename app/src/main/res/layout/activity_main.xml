<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frame_layout"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.amap.api.maps.MapView>

        <LinearLayout
            android:id="@+id/top_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--个人信息按钮，搜索框!-->
            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:background="@drawable/round_rectangle_not_selectable"
                android:padding="5dp"
                android:elevation="@dimen/elevation"
                android:layout_margin="@dimen/common_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/button_size"
                    android:minHeight="@dimen/button_size"
                    android:background="@drawable/oval"
                    android:src="@drawable/headicon"
                    android:contentDescription="@string/app_name"/>
                <TextView
                    android:id="@+id/search_box"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorDarkGray"
                    android:text="查找地点、公交、地铁"
                    android:layout_gravity="center"/>
                <ImageButton
                    android:id="@+id/voice_search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/oval"
                    android:src="@drawable/microphone"
                    android:minHeight="@dimen/button_size"
                    android:minWidth="@dimen/button_size"
                    android:layout_gravity="end|center"
                    />
            </LinearLayout>

            <!--横排圆形和圆角矩形按钮!-->
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/msg_center_button"
                    style="@style/MainActivityTopTwoButtonStyle"
                    android:src="@drawable/message"
                    android:background="@drawable/oval"/>

                <ImageButton
                    android:id="@+id/map_mode_button"
                    style="@style/MainActivityTopTwoButtonStyle"
                    android:background="@drawable/round_rectangle"
                    android:src="@drawable/map"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <!--竖排五个按钮!-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rectangle"
                android:elevation="3dp"
                android:padding="0dp"
                android:layout_margin="@dimen/common_margin"
                android:layout_gravity="end">
                <ImageButton
                    android:id="@+id/instant_route_status_button"
                    style="@style/MainActivityRightFiveButtonStyle"
                    android:src="@drawable/sign_light"
                    android:background="@drawable/rectangle_top"
                    />
                <View
                    style="@style/MainActivityRightFiveButtonDiverStyle"/>
                <ImageButton
                    android:id="@+id/take_taxi_button"
                    style="@style/MainActivityRightFiveButtonStyle"
                    android:src="@drawable/car"
                    android:background="@drawable/rectangle"
                    />
                <View
                    style="@style/MainActivityRightFiveButtonDiverStyle"/>
                <ImageButton
                    android:id="@+id/shared_bike_button"
                    style="@style/MainActivityRightFiveButtonStyle"
                    android:src="@drawable/bike"
                    android:background="@drawable/rectangle"
                    />
                <View
                    style="@style/MainActivityRightFiveButtonDiverStyle"/>
                <ImageButton
                    android:id="@+id/team_button"
                    style="@style/MainActivityRightFiveButtonStyle"
                    android:src="@drawable/walk_together"
                    android:background="@drawable/rectangle"
                    />
                <View
                    style="@style/MainActivityRightFiveButtonDiverStyle"/>
                <ImageButton
                    android:id="@+id/report_button"
                    style="@style/MainActivityRightFiveButtonStyle"
                    android:src="@drawable/report"
                    android:background="@drawable/rectangle_bottom"
                    />
            </LinearLayout>

            <!--+，-缩放按钮!-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/button_size"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rectangle"
                android:padding="0dp"
                android:elevation="3dp"
                android:layout_gravity="end"
                android:layout_marginTop="41dp"
                android:layout_marginBottom="41dp"
                android:layout_marginEnd="@dimen/common_margin">
                <ImageButton
                    android:id="@+id/zoom_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/button_size"
                    android:minWidth="@dimen/button_size"
                    android:src="@drawable/plus"
                    android:background="@drawable/rectangle_top"
                    android:layout_gravity="end"
                    />
                <View
                    android:layout_width="@dimen/button_size"
                    android:layout_height="0.5dp"
                    android:layout_gravity="end"
                    android:background="@drawable/div38">
                </View>
                <ImageButton
                    android:id="@+id/zoom_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/button_size"
                    android:minWidth="@dimen/button_size"
                    android:src="@drawable/sub"
                    android:background="@drawable/rectangle_bottom"
                    android:layout_gravity="end"
                    />
            </LinearLayout>

            <!--路线，定位，家 按钮!-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true">
                <ImageButton
                    android:id="@+id/location"
                    style="@style/MainActivityBottomTwoButtonStyle"
                    android:src="@drawable/whereme"
                    android:background="@drawable/oval"/>
                <ImageButton
                    android:id="@+id/route_plan_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:minWidth="@dimen/button_size"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/half_round_rectangle"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:elevation="@dimen/elevation"
                    android:layout_marginBottom="@dimen/common_margin"
                    android:src="@drawable/route"/>
                <ImageButton
                    android:id="@+id/home_workplace_set_button"
                    style="@style/MainActivityBottomTwoButtonStyle"
                    android:src="@drawable/target"
                    android:background="@drawable/oval"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <!--搜索附近框!-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="@dimen/elevation"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginBottom="@dimen/common_margin"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginEnd="@dimen/common_margin"
                android:background="@drawable/round_rectangle_not_selectable">
                <ImageView
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/button_size"
                    android:minWidth="@dimen/button_size"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/common_margin"
                    android:paddingBottom="@dimen/common_margin"
                    android:paddingTop="12dp"
                    android:paddingEnd="0dp"
                    android:src="@drawable/logo"/>
                <TextView
                    android:id="@+id/near_search_box"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:text=" 搜索附近"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_search_page_bar"
            android:visibility="gone"
            android:orientation="horizontal"
            android:background="@color/colorRiceWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginBottom="@dimen/common_margin"
                android:background="@null"
                android:src="@drawable/back_button_gray_pressed_dark_gray"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_rectangle_not_selectable_small_radius"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginBottom="@dimen/common_margin"
                android:layout_marginEnd="@dimen/common_margin"
                android:animateLayoutChanges="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/search_btn"/>
                <EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_marginStart="5dp"
                    android:textSize="13sp"
                    android:hint="搜索"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/microphone"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <include layout="@layout/sliding_menu_layout"/>
</android.support.v4.widget.DrawerLayout>