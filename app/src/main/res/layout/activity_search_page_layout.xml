<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorRiceWhite"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/SearchPageActivity_search_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginBottom="@dimen/common_margin"
            android:background="@null"
            android:src="@drawable/back_button_blue_pressed_gray"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_rectangle_not_selectable_small_radius"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginBottom="@dimen/common_margin"
            android:layout_marginEnd="@dimen/common_margin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/SearchPageActivity_search_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/search_btn"/>
            <EditText
                android:id="@+id/SearchPageActivity_search_edit_text"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:layout_marginStart="5dp"
                android:textSize="13sp"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:hint="搜索"/>
            <ImageButton
                android:id="@+id/SearchPageActivity_voice_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:src="@drawable/microphone"/>
            <ImageButton
                android:id="@+id/SearchPageActivity_cancel_input_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/oval_gray_pressed_dark_gray"
                android:src="@drawable/cancel_cross"/>
        </LinearLayout>
        <Button
            android:id="@+id/SearchPageActivity_search_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_rectangle_blue_press_dark_blue_small_radius"
            android:minWidth="42dp"
            android:minHeight="32dp"
            android:layout_marginEnd="5dp"
            android:text="搜索"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/colorGray"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/SearchPageActivity_type_button_search_history_layout"
            android:background="@color/colorRiceWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite">
                    <Button
                        android:id="@+id/SearchPageActivity_search_type_food"
                        style="@style/SearchPageSearchTypeButtonStyle"
                        android:text="美食"/>
                    <Button
                        android:id="@+id/SearchPageActivity_search_type_hotel"
                        style="@style/SearchPageSearchTypeButtonStyle"
                        android:text="酒店"/>
                    <Button
                        android:id="@+id/SearchPageActivity_search_type_gas_station"
                        style="@style/SearchPageSearchTypeButtonStyle"
                        android:text="加油站"/>
                    <Button
                        android:id="@+id/SearchPageActivity_search_type_bus_station"
                        style="@style/SearchPageSearchTypeButtonStyle"
                        android:text="公交站"/>
                    <Button
                        android:id="@+id/SearchPageActivity_search_type_my_collection"
                        style="@style/SearchPageSearchTypeButtonStyle"
                        android:text="收藏夹"/>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorLightGray"
                        android:layout_marginTop="@dimen/common_margin_middle"
                        android:layout_marginBottom="@dimen/common_margin_middle"/>
                    <Button
                        android:id="@+id/SearchPageActivity_search_type_more"
                        style="@style/SearchPageSearchTypeButtonStyle"
                        android:text="更多"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/SearchPageActivity_search_history_item_holder"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/SearchPageActivity_clear_all_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:padding="@dimen/common_margin"
                    android:textSize="14sp"
                    android:text="清空历史记录"/>
            </LinearLayout>
        </ScrollView>

        <ListView
            android:id="@+id/SearchPageActivity_search_result_list"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/SearchPageActivity_nothing_searched"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center"
            android:text="(。・＿・。)抱歉，我们什么也找不到"/>
    </FrameLayout>
</LinearLayout>