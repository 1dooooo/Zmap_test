<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorRiceWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.fei.zmap_test.TitleLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:title_text="个人信息" />
    <LinearLayout
        android:id="@+id/Account_profile_head_icon_setting"
        android:layout_marginTop="@dimen/common_margin"
        android:orientation="horizontal"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/rectangle_light_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/common_margin_middle"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:text="头像"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval"
            android:layout_gravity="center"
            android:layout_margin="@dimen/common_margin_middle"
            android:src="@drawable/headicon"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorLightGray"
        />
    <LinearLayout
        android:id="@+id/Account_profile_user_name_setting"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_light_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/common_margin_middle"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:text="用户名"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/common_margin_middle"
            android:textColor="@color/colorSkyBlue"
            android:textSize="16sp"
            android:text="雾渐渐模糊"/>
    </LinearLayout>
    <TextView
        android:id="@+id/Account_profile_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:gravity="center"
        android:padding="@dimen/common_margin_middle"
        android:background="@drawable/rectangle_light_gray"
        android:textSize="18sp"
        android:textColor="#ff2222"
        android:text="退出登录"/>
</LinearLayout>