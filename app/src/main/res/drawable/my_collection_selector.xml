<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checkable="true" android:state_checked="false" android:drawable="@drawable/my_collection">
        <shape android:shape="oval">
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>
    <item android:state_checkable="true" android:state_checked="true" android:drawable="@drawable/my_collection_checked">
        <shape android:shape="oval">
            <solid android:color="@color/colorSkyBlue"/>
        </shape>
    </item>
</selector>